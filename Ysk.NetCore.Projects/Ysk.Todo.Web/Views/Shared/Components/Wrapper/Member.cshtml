@model AppUserListDto

@{ 

    string active = string.Empty;
    if (TempData["activePage"] != null)
    {
        active = TempData["activePage"].ToString();
    }
}


<div class="border border-right " id="sidebar-wrapper">
    <div class="sidebar-heading">

        <img src="~/img/@Model.Picture" alt="@Model.Name" style="height:10rem!important;" class="w-70 img-thumbnail rounded-circle" />

    </div>
    <div class="list-group list-group-flush">

        <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action  @(active=="home"?"active":"")">
            <i class="fas fa-home mr-2"></i>
            AnaSayfa
        </a>

        <a asp-action="Index" asp-controller="WorkOrder" class="list-group-item list-group-item-action  @(active=="workorder"?"active":"")">
            <i class="fas fa-arrow-alt-circle-down mr-2"></i>
            Gelen İş Emirleri
        </a>
        <a asp-action="Index" asp-controller="Task" class="list-group-item list-group-item-action  @(active=="task"?"active":"")">
            <i class="fas fa-arrow-alt-circle-up mr-2"></i>
            Tamamladığım İşler
        </a>

        <a asp-action="Index" asp-controller="Notification" class="list-group-item list-group-item-action position-relative  @(active=="notification"?"active":"")">
            <i class="far fa-bell  mr-2"></i>
            @if (ViewBag.NotificationCount > 0)
            {
                <sub class="badge badge-info badge-pill position-absolute" style="bottom:0.625rem!important; left:1.7rem!important;"><small> @ViewBag.NotificationCount</small></sub>
            }

            Bildirimler
        </a>

        <a asp-action="Index" asp-controller="Profile" class="list-group-item list-group-item-action @(active=="profile"?"active":"")">
            <i class="fas fa-user mr-2"></i>
            Profilim
        </a>
        <a asp-area="" asp-action="SignOut" asp-controller="Home" class="list-group-item list-group-item-action ">
            <i class="fas fa-sign-out-alt mr-2"></i>
            Çıkış Yap
        </a>
    </div>
</div>