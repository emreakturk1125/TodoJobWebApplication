@model AppUserAddDto
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form asp-action="SignUp" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <h4 class="text-center">Kayıt Ol</h4>
    <div class="form-group">
        <label asp-for="Name">Adınız :</label>
        <input class="form-control" asp-for="Name" /> 
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Soyadınız :</label>
        <input class="form-control" asp-for="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email :</label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Şifre :</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Tekrar Şifre :</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı :</label>
        <input class="form-control" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <div class="form-group mt-3"> 
        <a asp-action="Index" class="btn btn-warning btn-sm">Vazgeç</a> 
        <button type="submit" class="btn btn-info btn-sm">Kayıt Ol</button>
    </div>

</form>
 
