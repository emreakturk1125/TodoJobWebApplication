@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<div class="row mt-3">
    <div class="col-md-3">
        <div class="card border-info mb-3" style="max-width: 18rem;">
            <div class="card-body text-center text-info">
                <h5 class="card-title">Tamamladığınız Görev Sayısı</h5>
                @if (ViewBag.CompletedTaskCount > 0)
                {
                    <p class="card-text display-5">@ViewBag.CompletedTaskCount</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="Task" class="btn btn-info btn-sm"><i class="fas fa-chevron-circle-right"></i> İncele</a>
                    </p>
                }
                else
                {
            <p class="card-text display-5">
                Herhangi bir görev tamamlamamışsınız.
            </p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-success mb-3" style="max-width: 18rem;">
            <div class="card-body text-center text-success">
                <h5 class="card-title">Tamamlanacak Görev Sayısı</h5>
                @if (ViewBag.RequiredCompleteTaskCount > 0)
                {
                    <p class="card-text display-5">@ViewBag.RequiredCompleteTaskCount</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="WorkOrder" class="btn btn-success btn-sm"><i class="fas fa-chevron-circle-right"></i> İncele</a>
                    </p>
                }
                else
                {
                    <p class="card-text display-5">
                        Tamamlanacak görev bulunmamaktadır.
                    </p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-danger mb-3" style="max-width: 18rem;"> 
            <div class="card-body text-center text-danger">
                <h5 class="card-title">Okumadığınız Bildirim Sayısı</h5>
                @if (ViewBag.UnreadNotificationCount > 0)
                {
                    <p class="card-text display-5">@ViewBag.UnreadNotificationCount</p>
                    <p class="">
                        <a asp-action="Index" asp-controller="Notification" class="btn btn-danger btn-sm"><i class="fas fa-chevron-circle-right"></i> İncele</a>
                    </p>
                }
                else
                {
            <p class="card-text display-5">
                Okumadığınız bildirim bulunmamaktadır.
            </p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card border-warning mb-3" style="max-width: 18rem;"> 
            <div class="card-body text-center">
                <h5 class="card-title">Yazdığınız Rapor Sayısı</h5>
                @if (ViewBag.ReportCount > 0)
                {
                    <p class="card-text display-5">@ViewBag.ReportCount</p>
                }
                else
                {
                    <p class="card-text display-5">
                      Herhangibir rapor yazmamışsınız.
                    </p>
                }
            </div>
        </div>
    </div>

    </div>

 

