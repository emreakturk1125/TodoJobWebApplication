
@model AppUserListDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-2" role="alert" style="margin-right:2px;">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Surname"></label>
        <input asp-for="@Model.Surname" class="form-control" />
        <span asp-validation-for="@Model.Surname" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div>
                    <h5 class="text-center mt-1">Şu an ki resminiz:</h5>
                    <img src="~/img/@Model.Picture" class="w-100" style="height:10rem!important;" alt="@Model.Name" />
                </div>

            </div>

            <div class="col-md-4">
                <div id="areaPreview" style="display:none!important;">
                    <h5 class="text-center mt-1">Seçtiğiniz resim:</h5>
                    <img id="picturePreview" src="" class="w-100" style="height:10rem!important;" />
                </div>

            </div>
            <div class="col-md-2">

            </div>

            <div class="col-md-12">
                <label> Resim Seç:</label>
                <input type="file" class="form-control-file mt-1" name="picture" id="picture" />
            </div>
        </div>
    </div>

    <button type="submit" class=" btn btn-info btn-sm mt-4">
        <i class="fas fa-check mr-2"></i>
        Kaydet
    </button>


</form>

  
@section javascript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script> 
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $("#picture").change(function (e) {
                $("#areaPreview").show();
                $("#picturePreview").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}

