@model UrgencyUpdateDto

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="Update" class="w-75 mx-auto p-3" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Description">Tanım :</label>
        <input class="form-control" type="text" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <button class="btn btn-info btn-sm my-2" type="submit"><i class="fas fa-check mr-2"></i> Güncelle</button>
</form>

@section javascript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}

