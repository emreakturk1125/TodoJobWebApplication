@model TaskUpdateDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="Update" class="w-75 mx-auto p-3" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Ad:</label>
        <input class="form-control" type="text" asp-for="@Model.Name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>

    <div class="form-group">
        <label>Açıklama:</label>
        <input class="form-control" type="text" asp-for="@Model.Description" />
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
    </div>

    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz:</label>
        <select class="form-control" asp-for="@Model.UrgencyId" asp-items="@ViewBag.Urgencys">
            <option hidden value="">-Seçiniz-</option>
        </select>
        <span class="text-danger" asp-validation-for="@Model.UrgencyId"></span>
    </div>


    <button id="btnn" class="btn btn-info btn-sm my-2" type="submit"><i class="fas fa-check mr-2"></i> Güncelle</button>
</form>

@section javascript{

    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}

